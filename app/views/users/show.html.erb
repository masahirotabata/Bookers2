
<main>
 <p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
  <div class="col-md-3">


  <%= render 'layouts/new', book: @book, user: @user %>
  </div>

  <div class="col-md-8 offset-md-1">

  <h1>Books</h1>
 <table class="table table-hover table-inverse">
<thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>

  </thead>
 <tbody>
  <% @books.each do |book| %>
  <tr>
   <td><%= link_to user_path(@user.id) do %>

       <%= attachment_image_tag @user_show, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>

       <% end %>
       <% end %></td>

       <% @books.each do |book| %>

    <td><%=link_to(book.title ,book_path(book.id)) %></td>
    <td><%= book.body %></td>



  <% end %>
  </tr>
 </tbody>
 </main>

