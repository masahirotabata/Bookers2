<div class="main posts-new">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1 class="form-heading">Editing Book </h1>

    <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

    <%= form_with model:@book, local:true  do |f| %>
      <div class="form">
        <div class="form-body">
          <%= f.text_field :title%>
          <%=f.text_area :body%>
           <%= attachment_image_tag @user_info, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
          <%= f.submit "Update Book" %>
        </div>
      </div>
     <% end %>
     <%= link_to "Show",book_path(@book.id) %> |
  		<%= link_to "Back",books_path  %>



     </div>
    </div>
  </div>
</div>
