div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">Edit</h1>
    
    <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

    <%= form_with model:@book, local:true  do |f| %>
      <div class="form">
        <div class="form-body">
          <%= f.text_field :title%>
          <%=f.text_area :body%>
           <%= attachment_image_tag @user_info, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
          <%= f.submit "edit" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
