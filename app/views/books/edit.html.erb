div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">Edit</h1>

    <%= form_with model:@book, local:true  do |f| %>
      <div class="form">
        <div class="form-body">
          <%= f.text_field :title%>
          <%=f.text_area :body%>
          <%= f.submit "edit" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
