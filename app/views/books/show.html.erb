


<main>
 <p id="notice"></p>
 <div class="container">
  <div class="row">
  
  <%= render 'layouts/new', book: @book, user: @user %>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
 <tbody><tr>
  <td><%= link_to user_path(@book_show.user) do %>
    <%= attachment_image_tag @book_show.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
     <%=@book_show.user.name %>
      <% end %></td>
      <td><%=link_to(@book_show.title ,book_path(@book_show.id)) %></td>
      <td><%= @book_show.body %></td>
  
  <% if @user.id == current_user.id %>
  <td><%=link_to("Edit",edit_book_path(@book_show.id)) %></td>
   <td><%=link_to "Destroy" ,book_path(@book_show.id), method: :delete %></td>
   <% end %>
 </tr>
   </tbody></table>
  </div>
 </div>
</div>

</main>


   